<table class="table table-hover">
    <thead>
        <tr>
            <th>Video Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% for @video in @videos %>
            <tr>
                <td>
                    <a href="<%= @video.embed_url %>"><%= @video.title %></a>
                </td>
                <td>
                    <% if @video.description.nil? %>
                        No description provided.
                    <% else %>
                        <%= @video.description.slice(0..100) + "..." %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
